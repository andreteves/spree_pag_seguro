<% if @order.payment_method.instance_of? Spree::PaymentMethod::PagSeguroMethod %>
  <% if @order.payment.completed? && @order.payment_notifications.present? %>
    Seu pagamento foi aprovado pelo PagSeguro através da transação de código:
		<%= @order.payment_notifications.last.transaction_id %>
  <% else %>
    Aguardando liberação de pagamento pelo PagSeguro.<br />
    Clique na imagem abaixo para realizar o pagamento.<br />
    <%= link_to image_tag("pag_seguro_checkout.gif"), PagSeguro::Payment.checkout_payment_url(@order.payment_method.code(@order.payment)) %>
  <% end %>
<% end %>